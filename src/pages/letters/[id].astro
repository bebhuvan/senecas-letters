      // Ctrl/Cmd + Plus to increase font size
      if ((e.ctrlKey || e.metaKey) && e.key === '=') {
        e.preventDefault();
        if (currentFontSize < 24) {
          currentFontSize += 2;
          updateFontSize(currentFontSize);
        }
      }
      
      // Ctrl/Cmd + Minus to decrease font size
      if ((e.ctrlKey || e.metaKey) && e.key === '-') {
        e.preventDefault();
        if (currentFontSize > 14) {
          currentFontSize -= 2;
          updateFontSize(currentFontSize);
        }
      }
